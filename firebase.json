{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/users",
        "function": "app"
      },
      {
        "source": "/user",
        "function": "app"
      },
      {
        "source": "/transactions",
        "function": "app"
      },
      {
        "source": "/all-time",
        "function": "app"
      },
      {
        "source": "/period",
        "function": "app"
      },
      {
        "source": "/import/**",
        "function": "app"
      }
    ]
  }
}
